# Mister DJ Backend - Production Environment Example
NODE_ENV=production
HOST=0.0.0.0
PORT=3000
SERVICE_NAME=mr-dj-backend
LOG_FORMAT=combined
CORS_ORIGIN=https://staging.sevensa.nl,https://mr-dj.nl
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
DATABASE_URL=postgres://mrdj_user:mrdj_secure_password_2025@mr-dj-postgres:5432/mrdj_db
REDIS_URL=redis://:mrdj_redis_password_2025@mr-dj-redis:6379/0
PGSSLMODE=require
CONFIG_DASHBOARD_ENABLED=true
CONFIG_DASHBOARD_USER=admin
CONFIG_DASHBOARD_PASS=sevensa
CONFIG_DASHBOARD_ALLOWED_IPS=127.0.0.1,::1
CONFIG_DASHBOARD_KEYS=NODE_ENV,HOST,PORT,SERVICE_NAME,LOG_FORMAT,CORS_ORIGIN,RATE_LIMIT_WINDOW_MS,RATE_LIMIT_MAX,DATABASE_URL,REDIS_URL,PGSSLMODE,MAIL_PROVIDER,MAIL_API_KEY,MAIL_FROM_ADDRESS,MAIL_REPLY_TO,MAIL_TEMPLATES_CONTACT,MAIL_TEMPLATES_BOOKING,RENTGUY_API_BASE_URL,RENTGUY_API_KEY,RENTGUY_WORKSPACE_ID,RENTGUY_TIMEOUT_MS
CONFIG_DASHBOARD_STORE_PATH=backend/managed.env

# Mail integratie configuratie (instellen via dashboard aanbevolen)
MAIL_PROVIDER=postmark
MAIL_API_KEY=pm-prod-api-key
MAIL_FROM_ADDRESS=hello@mr-dj.nl
MAIL_REPLY_TO=info@mr-dj.nl
MAIL_TEMPLATES_CONTACT=contact-confirmation-template-id
MAIL_TEMPLATES_BOOKING=booking-confirmation-template-id

# RentGuy integratie (instellen via dashboard aanbevolen)
RENTGUY_API_BASE_URL=https://api.rentguy.app/v1
RENTGUY_API_KEY=rentguy-production-api-key
RENTGUY_WORKSPACE_ID=primary
RENTGUY_TIMEOUT_MS=5000
