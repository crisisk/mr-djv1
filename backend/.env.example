# Mister DJ Backend - Production Environment Example
NODE_ENV=production
HOST=0.0.0.0
PORT=3000
SERVICE_NAME=mr-dj-backend
LOG_FORMAT=combined
CORS_ORIGIN=https://staging.sevensa.nl,https://mr-dj.nl
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
DATABASE_URL=postgres://mrdj_user:mrdj_secure_password_2025@mr-dj-postgres:5432/mrdj_db
REDIS_URL=redis://:mrdj_redis_password_2025@mr-dj-redis:6379/0
PGSSLMODE=require
CONFIG_DASHBOARD_ENABLED=true
CONFIG_DASHBOARD_USER=admin
CONFIG_DASHBOARD_PASS=sevensa
CONFIG_DASHBOARD_ALLOWED_IPS=127.0.0.1,::1
CONFIG_DASHBOARD_KEYS=NODE_ENV,HOST,PORT,SERVICE_NAME,LOG_FORMAT,CORS_ORIGIN,RATE_LIMIT_WINDOW_MS,RATE_LIMIT_MAX,DATABASE_URL,REDIS_URL,PGSSLMODE,MAIL_PROVIDER,MAIL_API_KEY,MAIL_FROM_ADDRESS,MAIL_REPLY_TO,MAIL_TEMPLATES_CONTACT,MAIL_TEMPLATES_BOOKING,HCAPTCHA_SITE_KEY,HCAPTCHA_SECRET_KEY,HCAPTCHA_VERIFY_URL,RENTGUY_API_BASE_URL,RENTGUY_API_KEY,RENTGUY_WORKSPACE_ID,RENTGUY_TIMEOUT_MS,N8N_PERSONALIZATION_WEBHOOK_URL,SEO_AUTOMATION_API_URL,SEO_AUTOMATION_API_KEY,SEO_AUTOMATION_KEYWORDSET_ID,SEO_AUTOMATION_REGION,SEO_AUTOMATION_THEME_KEYWORDS,SEO_AUTOMATION_APPROVAL_EMAIL,CITY_AUTOMATION_LLM_PROVIDER,CITY_AUTOMATION_LLM_MODEL,CITY_AUTOMATION_LLM_API_KEY,CITY_AUTOMATION_DRY_RUN
CONFIG_DASHBOARD_STORE_PATH=backend/managed.env

# OAuth integratie (verplicht voor social login)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# Mail integratie configuratie (instellen via dashboard aanbevolen)
MAIL_PROVIDER=postmark
MAIL_API_KEY=pm-prod-api-key
MAIL_FROM_ADDRESS=hello@mr-dj.nl
MAIL_REPLY_TO=info@mr-dj.nl
MAIL_TEMPLATES_CONTACT=contact-confirmation-template-id
MAIL_TEMPLATES_BOOKING=booking-confirmation-template-id

# hCaptcha verificatie (anti-spam bescherming voor formulieren)
HCAPTCHA_SITE_KEY=10000000-ffff-ffff-ffff-000000000001
HCAPTCHA_SECRET_KEY=0x0000000000000000000000000000000000000000
HCAPTCHA_VERIFY_URL=https://hcaptcha.com/siteverify

# RentGuy integratie (instellen via dashboard aanbevolen)
RENTGUY_API_BASE_URL=https://api.rentguy.app/v1
RENTGUY_API_KEY=rentguy-production-api-key
RENTGUY_WORKSPACE_ID=primary
RENTGUY_TIMEOUT_MS=5000

# Personalization & CRO automatisering
N8N_PERSONALIZATION_WEBHOOK_URL=https://automation.internal/api/webhook/personalization

# WhatsApp Business API integratie (verplicht voor WhatsApp messaging)
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=

# City content automatisering (interne workflow zonder n8n)
SEO_AUTOMATION_API_URL=https://seo-api.internal/keyword-sets/monthly
SEO_AUTOMATION_API_KEY=seo-api-token
SEO_AUTOMATION_KEYWORDSET_ID=brabant-entertainment
SEO_AUTOMATION_REGION=Noord-Brabant
SEO_AUTOMATION_THEME_KEYWORDS=dj,sax,bruiloft,feest
SEO_AUTOMATION_APPROVAL_EMAIL=marketing@mr-dj.nl
CITY_AUTOMATION_LLM_PROVIDER=template
CITY_AUTOMATION_LLM_MODEL=gpt-4.1-mini
CITY_AUTOMATION_LLM_API_KEY=
CITY_AUTOMATION_DRY_RUN=false
