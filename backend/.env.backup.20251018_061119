RENTGUY_SERVICE_ACCOUNT_PASSWORD=sevensa
RENTGUY_WORKSPACE_ID=mr-dj
RENTGUY_TIMEOUT_MS=10000

# Personalization & CRO automatisering
N8N_PERSONALIZATION_WEBHOOK_URL=https://automation.internal/api/webhook/personalization

# City content automatisering (interne workflow zonder n8n)
SEO_AUTOMATION_API_URL=https://seo-api.internal/keyword-sets/monthly
