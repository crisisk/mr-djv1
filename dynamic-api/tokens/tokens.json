{
  "$schema": "https://schemas.codeless.site/design-tokens/v1.json",
  "mode": "light",
  "meta": {
    "name": "Mister DJ EDS v1",
    "brand": "Mister DJ",
    "version": "1.0.0"
  },
  "color": {
    "brand": {
      "50": "#ecf6ff",
      "100": "#d7ecff",
      "200": "#a9d3ff",
      "300": "#76b8ff",
      "400": "#4c9df8",
      "500": "#1E88F7",
      "600": "#156DDB",
      "700": "#0F56B1",
      "800": "#0B3D7D",
      "900": "#082a56"
    },
    "accent": {
      "gold": "#F6C55B",
      "rose": "#FF8FA3"
    },
    "gray": {
      "50": "#f7f8fa",
      "100": "#eef1f5",
      "200": "#dfe6ee",
      "300": "#c9d3e1",
      "400": "#a5b3c8",
      "500": "#7a8aa6",
      "600": "#5c6a85",
      "700": "#46526a",
      "800": "#313a4c",
      "900": "#1f2633"
    },
    "surface": {
      "bg": "{color.gray.50}",
      "card": "#ffffff",
      "muted": "{color.gray.100}",
      "brandGradientStart": "{color.brand.700}",
      "brandGradientEnd": "{color.brand.500}"
    },
    "text": {
      "default": "{color.gray.900}",
      "muted": "{color.gray.600}",
      "onBrand": "#ffffff",
      "onCard": "{color.gray.800}"
    },
    "state": {
      "success": "#22C55E",
      "warning": "#F59E0B",
      "error": "#EF4444",
      "info": "#3B82F6",
      "focus": "{color.brand.500}"
    }
  },
  "typography": {
    "fontFamily": {
      "display": "var(--font-display, 'Montserrat', ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, 'Helvetica Neue', Arial)",
      "body": "var(--font-body, 'Inter', ui-sans-serif, system-ui)"
    },
    "sizes": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem",
      "5xl": "3rem"
    },
    "lineHeights": {
      "tight": "1.1",
      "snug": "1.25",
      "normal": "1.5"
    },
    "letterSpacing": {
      "tight": "-0.01em",
      "wide": "0.01em"
    }
  },
  "radius": {
    "sm": "0.5rem",
    "md": "0.875rem",
    "lg": "1.25rem",
    "xl": "1.5rem",
    "2xl": "2rem"
  },
  "shadow": {
    "sm": "0 1px 2px rgba(16,24,40,0.06)",
    "md": "0 8px 20px rgba(16,24,40,0.08)",
    "lg": "0 14px 30px rgba(16,24,40,0.12)"
  },
  "spacing": {
    "xs": "0.375rem",
    "sm": "0.5rem",
    "md": "0.75rem",
    "lg": "1rem",
    "xl": "1.5rem",
    "2xl": "2rem",
    "3xl": "3rem"
  },
  "container": {
    "max": "1200px",
    "gutter": "1rem"
  }
}