{
  "ci": {
    "collect": {
      "numberOfRuns": 1,
      "startServerCommand": "npx http-server ./public -p 3000 -c-1",
      "startServerReadyPattern": "Available on:",
      "startServerReadyTimeout": 180000,
      "chromeFlags": "--headless --no-sandbox --disable-dev-shm-usage",
      "url": [
        "http://localhost:3000"
      ],
      "settings": {
        "preset": "desktop"
      }
    },
    "upload": {
      "target": "filesystem",
      "outputDir": ".lighthouseci"
    },
    "assert": {
      "assertions": {
        "categories:performance": [
          "error",
          {
            "minScore": 0.85
          }
        ],
        "categories:seo": [
          "error",
          {
            "minScore": 0.95
          }
        ]
      }
    }
  }
}
